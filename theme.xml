<theme defaultTransition="instant">
   <formatVersion>7</formatVersion>

   <!--
   ///
   Subset: Distribution
   ///
   -->
   <subset name="distribution" displayName="Distribution">
      <include name="batocera" displayName="Batocera" />
      <include name="retrobat" displayName="Retrobat" />
   </subset>

   <!--
   ///
   Variables
   ///
   -->
   <variables>
      <fontRegular>./_inc/fonts/Roboto-Regular.ttf</fontRegular>
      <fontBold>./_inc/fonts/Roboto-Bold.ttf</fontBold>
      <fontLight>./_inc/fonts/Roboto-Light.ttf</fontLight>
      <fontLogo>./_inc/fonts/ChangaOne-Italic.ttf</fontLogo>
      <spacerImage>./_inc/images/space.png</spacerImage>
      <distributionPath ifSubset="distribution:retrobat">~/.emulationstation/</distributionPath><!-- RetroBat\emulationstation\.emulationstation\ -->
      <distributionPath ifSubset="distribution:batocera">./../../</distributionPath><!-- userdata/ -->
      <themeCustomizationsPath>${distributionPath}theme-customizations/art-book-next/</themeCustomizationsPath>
   </variables>

   <!--
   ///
   Subset: Aspect Ratio
   ///
   -->
   <subset name="aspect-ratio" displayName="Aspect Ratio">
      <include if="${screen.width} == '720' && ${screen.height} == '720'" name="1-1" displayName="1:1 (Detected)" />
      <include if="{screen.ratio} == '16/9'" name="16-9" displayName="16:9 (Detected)" />
      <include if="{screen.ratio} == '16/10'" name="16-10" displayName="16:10 (Detected)" />
      <include if="{screen.ratio} == '4/3'" name="4-3" displayName="4:3 (Detected)" />
      <include if="{screen.ratio} == '3/2'" name="3-2" displayName="3:2 (Detected)" />
      <include name="16-9" displayName="16:9" />
      <include name="16-10" displayName="16:10" />
      <include name="4-3" displayName="4:3" />
      <include name="3-2" displayName="3:2" />
      <include name="1-1" displayName="1:1" />
   </subset>

   <!--
   ///
   Subset: Color Scheme
   ///
   -->
   <subset name="color-scheme" displayName="Color Scheme">
      <include name="art-book-next" displayName="Default" />
      <include name="art-book" displayName="Art Book" />
      <include name="steam-os" displayName="Steam OS" />
      <include name="snes" displayName="SNES" />
      <include name="famicom" displayName="Famicom" />
      <include name="black" displayName="Black" />
      <include name="grayscale" displayName="Grayscale" />
      <include name="custom" displayName="Custom" />
   </subset>
   <include>./colors.xml</include>
   <include ifSubset="color-scheme:custom">${themeCustomizationsPath}colors.xml</include>

   <!--
   ///
   Subset: Font Size
   ///
   -->
   <subset name="font-size" displayName="Font Size">
      <include name="default" displayName="Default" />
      <include name="large" displayName="Large" />
      <include name="small" displayName="Small" />
      <include name="custom" displayName="Custom" />
   </subset>

   <!--
   ///
   Subset: System View Images
   ///
   -->
   <subset name="system-view-images" displayName="System View Images">
      <include name="default" displayName="Default" />
      <include name="noir" displayName="Noir" />
      <include name="classic" displayName="Classic" />
      <include name="custom" displayName="Custom" />
   </subset>

   <!--
   ///
   Subset: Gamelist View Layout
   ///
   -->
   <subset name="gamelist-view-layout" displayName="Gamelist View Layout">
      <include name="list-metadata-boxart" displayName="Metadata &amp; Boxart" />
      <include name="list-metadata-screenshot-marquee" displayName="Metadata, Screenshot &amp; Marquee" />
      <include name="list-boxart" displayName="Boxart" />
      <include name="list-screenshot-marquee" displayName="Screenshot &amp; Marquee" />
   </subset>

   <!--
   ///
   View: Screen
   ///
   -->
   <view name="screen">
      <controllerActivity name="controllerActivity">
         <visible>false</visible>
      </controllerActivity>
      <stackpanel name="system-indicators" extra="true">
         <origin>1 0</origin>
         <pos>1 0</pos>
         <size>1 0.05</size><!-- 100% 24 -->
         <orientation>horizontal</orientation>
         <separator>2</separator>
         <reverse>true</reverse>
         <batteryText name="system-battery-text">
            <color>${statusBarIconColor}</color>
         </batteryText>
         <batteryIcon name="system-battery-icon">
            <color>${statusBarIconColor}</color>
            <full>./_inc/images/battery-100-vertical.svg</full>
            <at75>./_inc/images/battery-75-vertical.svg</at75>
            <at50>./_inc/images/battery-50-vertical.svg</at50>
            <at25>./_inc/images/battery-25-vertical.svg</at25>
            <empty>./_inc/images/battery-0-vertical.svg</empty>
            <incharge>./_inc/images/battery-charging-vertical.svg</incharge>
         </batteryIcon>
         <networkIcon name="system-network-icon">
            <color>${statusBarIconColor}</color>
            <networkIcon>./_inc/images/wifi-vertical.svg</networkIcon>
            <planemodeIcon>./_inc/images/wifi-vertical.svg</planemodeIcon>
         </networkIcon>
         <clock name="system-clock">
            <color>${statusBarIconColor}</color>
         </clock>
      </stackpanel>
   </view>

   <!--
   ///
   View: All
   ///
   -->
   <view name="system,basic,detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>0</zIndex>
      </image>
      <image ifHelpPrompts="true" name="help-background" extra="true">
         <origin>0 1</origin>
         <pos>0 1</pos>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>${helpBackgroundColor}</color>
      </image>
      <helpsystem ifHelpPrompts="true" name="help">
         <origin>0.5 0.5</origin>
         <textColor>${helpTextColor}</textColor>
         <iconColor>${helpIconColor}</iconColor>
         <iconUpDown>./_inc/images/help-dpad-updown.svg</iconUpDown>
         <iconLeftRight>./_inc/images/help-dpad-leftright.svg</iconLeftRight>
         <iconUpDownLeftRight>./_inc/images/help-dpad-updownleftright.svg</iconUpDownLeftRight>
         <iconA>./_inc/images/help-button-east.svg</iconA>
         <iconB>./_inc/images/help-button-south.svg</iconB>
         <iconX>./_inc/images/help-button-north.svg</iconX>
         <iconY>./_inc/images/help-button-west.svg</iconY>
      </helpsystem>
      <helpsystem ifHelpPrompts="false" name="help">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </helpsystem>
   </view>

   <!--
   ///
   View: System
   ///
   -->
   <view name="system">
      <text name="systemInfo">
         <pos>1 1</pos>
      </text>
      <text name="logoText">
         <pos>1 1</pos>
      </text>
      <image name="logo">
         <path ifSubset="system-view-images:default">./_inc/systems/images-default/_default.png</path>
         <path ifSubset="system-view-images:default">./_inc/systems/images-default/${system.theme}.png</path>
         <path ifSubset="system-view-images:noir">./_inc/systems/images-noir/_default.png</path>
         <path ifSubset="system-view-images:noir">./_inc/systems/images-noir/${system.theme}.png</path>
         <path ifSubset="system-view-images:classic">./_inc/systems/images-classic/_default.png</path>
         <path ifSubset="system-view-images:classic">./_inc/systems/images-classic/${system.theme}.png</path>
         <path ifSubset="system-view-images:custom">${themeCustomizationsPath}backgrounds/_default.png</path>
         <path ifSubset="system-view-images:custom">${themeCustomizationsPath}backgrounds/${system.theme}.png</path>
         <color>${systemArtColor}dd</color>
         <saturation>${systemArtSaturation}</saturation>
      </image>
      <image name="background" extra="true">
         <color>${systemBackgroundColor}</color>
      </image>
      <carousel name="systemcarousel">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <logoScale>1</logoScale>
         <color>00000000</color>
         <type>horizontal</type>
         <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
         <defaultTransition>instant</defaultTransition>
         <zIndex>1</zIndex>
      </carousel>
      <image name="system-logo" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <maxSize>0.5 0.3</maxSize>
         <color>${systemLogoColor}</color>
         <path>./_inc/systems/logos/${system.theme}.svg</path>
         <zIndex>2</zIndex>
      </image>
   </view>

   <!--
   ///
   View: Gamelist (All)
   ///
   -->
   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <zIndex>5</zIndex>
         <path>./_inc/systems/logos/${system.theme}.svg</path>
         <path ifSubset="color-scheme:custom">${themeCustomizationsPath}logos/${system.theme}.svg</path>
         <path ifSubset="color-scheme:custom">${themeCustomizationsPath}logos/${system.theme}.png</path>
         <color>${gamelistListLogoColor}</color>
      </image>
      <text name="logoText">
         <origin>0.5 0.5</origin>
         <color>${gamelistListLogoColor}</color>
         <zIndex>5</zIndex>
         <fontPath>${fontLogo}</fontPath>
         <forceUppercase>true</forceUppercase>
         <lineSpacing>1</lineSpacing>
         <alignment>center</alignment>
      </text>
      <textlist name="gamelist">
         <origin>0 0</origin>
         <alignment>left</alignment>
         <fontPath>${fontBold}</fontPath>
         <selectorColor>00000000</selectorColor>
         <selectedColor>${gamelistListTextlistSelectedColor}</selectedColor>
         <primaryColor>${gamelistListTextlistUnselectedColor}</primaryColor>
         <secondaryColor>${gamelistListTextlistUnselectedColor}</secondaryColor>
         <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
         <zIndex>5</zIndex>
      </textlist>
      <image name="gamelist-background" extra="true">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>${gamelistListTextlistBackgroundColor}</color>
         <zIndex>4</zIndex>
      </image>
      <image name="background" extra="true">
         <color>${backgroundColor}</color>
         <zIndex>1</zIndex>
      </image>
   </view>

   <!--
   ///
   View: Gamelist (Basic)
   ///
   -->
   <view name="basic">
      <textlist name="gamelist">
         <origin>0.5 0</origin>
         <alignment>center</alignment>
      </textlist>
      <image name="gamelist-background" extra="true">
         <size>1 1</size>
      </image>
   </view>

   <!--
   ///
   View: Gamelist (Detailed & Video)
   ///
   -->
   <view name="detailed,video">
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description,md_name,md_lbl_gametime,md_gametime">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <fontPath>${fontBold}</fontPath>
         <alignment>left</alignment>
         <color>${gamelistListMetadataColor}</color>
         <forceUppercase>true</forceUppercase>
      </text>
      <datetime name="md_releasedate,md_lastplayed">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <fontPath>${fontBold}</fontPath>
         <color>${gamelistListMetadataColor}</color>
         <alignment>left</alignment>
         <forceUppercase>true</forceUppercase>
         <format>%Y-%m-%d</format>
      </datetime>
      <rating name="md_rating">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>${gamelistListRatingColor}</color>
         <filledPath>./_inc/images/icon-star-filled.svg</filledPath>
         <unfilledPath>./_inc/images/icon-star-unfilled.svg</unfilledPath>
      </rating>
      <image name="md_releasedate_icon,md_players_icon,md_developer_icon,md_publisher_icon,md_genre_icon,md_lastplayed_icon,md_playcount_icon,md_gametime_icon" extra="true">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>${gamelistListMetadataIconColor}</color>
      </image>
      <image name="md_releasedate_icon">
         <path>./_inc/images/icon-releasedate.svg</path>
      </image>
      <image name="md_players_icon">
         <path>./_inc/images/icon-players.svg</path>
      </image>
      <image name="md_playcount_icon">
         <path>./_inc/images/icon-playcount.svg</path>
      </image>
      <image name="md_gametime_icon">
         <path>./_inc/images/icon-gametime.svg</path>
      </image>
      <image name="md_lastplayed_icon">
         <path>./_inc/images/icon-lastplayed.svg</path>
      </image>
      <image name="md_genre_icon">
         <path>./_inc/images/icon-genre.svg</path>
      </image>
      <image name="md_developer_icon">
         <path>./_inc/images/icon-developer.svg</path>
      </image>
      <image name="md_publisher_icon">
         <path>./_inc/images/icon-publisher.svg</path>
      </image>
      <text name="md_description">
         <origin>0 0</origin>
         <fontPath>${fontRegular}</fontPath>
         <color>${gamelistListDescriptionColor}</color>
         <forceUppercase>false</forceUppercase>
      </text>
      <image ifSubset="gamelist-view-layout:metadata-on|metadata-on-immersive|metadata-off" name="game-metadata-background" extra="true">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>${gamelistListMetadataBackgroundColor}</color>
         <zIndex>2</zIndex>
      </image>
   </view>

   <!--
   ///
   View: Gamelist (Detailed)
   ///
   -->
   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <color ifSubset="gamelist-view-layout:metadata-on-immersive|metadata-off-immersive">FFFFFF99</color>
         <zIndex>3</zIndex>
      </image>
   </view>

   <!--
   ///
   View: Gamelist (Video)
   ///
   -->
   <view name="video">
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <delay>2</delay>
         <effect>none</effect>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <color ifSubset="gamelist-view-layout:metadata-on-immersive">FFFFFFDD</color>
         <color ifSubset="gamelist-view-layout:metadata-off-immersive">FFFFFF99</color>
         <zIndex>3</zIndex>
         <loops>0</loops>
      </video>
   </view>

   <!--
   ///
   View: Menu
   ///
   -->
   <view name="menu">
      <menuText name="menutitle">
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.03</fontSize>
         <color>ffffff</color>
      </menuText>
      <menuText name="menufooter">
         <fontPath>${fontLight}</fontPath>
         <fontSize>0.025</fontSize>
         <color>ffffff77</color>
      </menuText>
      <menuText name="menutext">
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.035</fontSize>
         <color>ffffff77</color>
         <separatorColor>ffffff11</separatorColor>
         <selectedColor>ffffff</selectedColor>
      </menuText>
      <menuTextSmall name="menutextsmall">
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.025</fontSize>
         <color>ffffff77</color>
      </menuTextSmall>
      <menuGroup name="menugroup">
         <fontPath>${fontRegular}</fontPath>
         <fontSize>0.0325</fontSize>
         <color>ffffff</color>
         <separatorColor>ffffff99</separatorColor>
         <backgroundColor>00000000</backgroundColor>
         <lineSpacing>2.5</lineSpacing>
      </menuGroup>
      <menuTextEdit name="menutextedit">
         <inactive>./_inc/images/menu-textinput.png</inactive>
         <active>./_inc/images/menu-textinput-active.png</active>
      </menuTextEdit>
      <menuBackground name="menubg">
         <color>${menuBackgroundColor}</color>
         <cornerSize>20 20</cornerSize>
      </menuBackground>
      <menuIcons name="menuicons">
         <iconSystem>./_inc/images/menu-icon-system.svg</iconSystem>
         <iconUpdates>./_inc/images/menu-icon-update.svg</iconUpdates>
         <iconControllers>./_inc/images/menu-icon-controller.svg</iconControllers>
         <iconGames>./_inc/images/menu-icon-games.svg</iconGames>
         <iconUI>./_inc/images/menu-icon-ui.svg</iconUI>
         <iconSound>./_inc/images/menu-icon-sound.svg</iconSound>
         <iconNetwork>./_inc/images/menu-icon-network.svg</iconNetwork>
         <iconScraper>./_inc/images/menu-icon-scraper.svg</iconScraper>
         <iconAdvanced>./_inc/images/menu-icon-advanced.svg</iconAdvanced>
         <iconQuit>./_inc/images/menu-icon-quit.svg</iconQuit>
         <iconRetroachievements>./_inc/images/menu-icon-achievements.svg</iconRetroachievements>
         <iconKodi>./_inc/images/menu-icon-kodi.svg</iconKodi>
         <iconRestart>./_inc/images/menu-icon-restart.svg</iconRestart>
         <iconShutdown>./_inc/images/menu-icon-shutdown.svg</iconShutdown>
         <iconFastShutdown>./_inc/images/menu-icon-shutdown.svg</iconFastShutdown>
      </menuIcons>
   </view>

   <!--
   ///
   Include: Aspect Ratios
   ///
   -->
   <include ifSubset="aspect-ratio:16-9">./aspect-ratio-16-9.xml</include>
   <include ifSubset="aspect-ratio:16-10">./aspect-ratio-16-10.xml</include>
   <include ifSubset="aspect-ratio:4-3">./aspect-ratio-4-3.xml</include>
   <include ifSubset="aspect-ratio:3-2">./aspect-ratio-3-2.xml</include>
   <include ifSubset="aspect-ratio:5-3">./aspect-ratio-5-3.xml</include>
   <include ifSubset="aspect-ratio:1-1">./aspect-ratio-1-1.xml</include>

   <!--
   ///
   Include: Custom Fonts
   ///
   -->
   <include ifSubset="font-size:custom">${themeCustomizationsPath}fonts.xml</include>

</theme>