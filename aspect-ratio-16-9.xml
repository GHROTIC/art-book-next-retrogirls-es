<!-- 
16:9 aspect ratio
based on 853x480
-->
<theme>
   <formatVersion>7</formatVersion>

   <!--
   ///
   View: Screen
   ///
   -->
   <view name="screen">
      <stackpanel name="system-indicators" extra="true">
         <w>0.976553341148886</w><!-- 833 -->
         <separator>10</separator>
      </stackpanel>
   </view>

   <!--
   ///
   View: All
   ///
   -->
   <view name="system,basic,detailed">
      <helpsystem ifHelpPrompts="true" name="help">
         <pos>0.5 0.942708333333333</pos><!-- 50% 452.5 -->
         <fontSize ifSubset="font-size:default|large">0.0375</fontSize><!-- 18 -->
         <fontSize ifSubset="font-size:small">0.033333333333333</fontSize><!-- 16 -->
      </helpsystem>
   </view>

   <!--
   ///
   View: System
   ///
   -->
   <view name="system">
      <carousel name="systemcarousel">
         <logoSize>1.1 1.1</logoSize>
         <maxLogoCount>5</maxLogoCount>
      </carousel>
   </view>

   <!--
   ///
   View: Gamelist (All)
   ///
   -->
   <view name="basic,detailed">
      <image name="logo">
         <y>0.130208333333333</y><!-- 62.5 -->
         <maxSize>0.269636576787808 0.104166666666667</maxSize><!-- 230 50 -->
      </image>
      <text name="logoText">
         <y>0.130208333333333</y><!-- 62.5 -->
         <size>0.269636576787808 0.104166666666667</size><!-- 230 50 -->
         <fontSize>0.05</fontSize><!-- 24 -->
      </text>
      <textlist name="gamelist">
         <pos>0.041031652989449 0.25</pos><!-- 35 120 -->
         <h ifHelpPrompts="true">0.5875</h><!-- 282 -->
         <h ifHelpPrompts="false">0.7</h><!-- 336 -->
         <!-- small font -->
         <fontSize ifSubset="font-size:small">0.033333333333333</fontSize><!-- 16 -->
         <lines ifSubset="font-size:small" ifHelpPrompts="true">11</lines>
         <lines ifSubset="font-size:small" ifHelpPrompts="false">13</lines>
         <!-- default font -->
         <fontSize ifSubset="font-size:default">0.041666666666667</fontSize><!-- 20 -->
         <lines ifSubset="font-size:default" ifHelpPrompts="true">9</lines>
         <lines ifSubset="font-size:default" ifHelpPrompts="false">11</lines>
         <!-- large font -->
         <fontSize ifSubset="font-size:large">0.05</fontSize><!-- 24 -->
         <lines ifSubset="font-size:large" ifHelpPrompts="true">7</lines>
         <lines ifSubset="font-size:large" ifHelpPrompts="false">9</lines>
      </textlist>
   </view>

   <!--
   ///
   View: Gamelist (Basic)
   ///
   -->
   <view name="basic">
      <image name="logo">
         <x>0.5</x><!-- 50% -->
      </image>
      <text name="logoText">
         <x>0.5</x><!-- 50% -->
      </text>
      <textlist name="gamelist">
         <w>0.917936694021102</w><!-- 783 -->
      </textlist>
   </view>

   <!--
   ///
   View: Gamelist (Detailed)
   ///
   -->
   <view name="detailed">
      <image name="gamelist-background" extra="true">
         <size>0.375146541617819 1</size><!-- 320 480 -->
      </image>
      <image name="logo">
         <x>0.18757327080891</x><!-- 160 -->
      </image>
      <text name="logoText">
         <x>0.18757327080891</x><!-- 160 -->
      </text>
      <textlist name="gamelist">
         <w>0.281359906213365</w><!-- 240 -->
      </textlist>
   </view>

   <!--
   ///
   View: Gamelist (Detailed - Metadata On)
   ///
   -->
   <view name="detailed" ifSubset="gamelist-view-metadata:on">
      <text name="game-description" extra="true">
         <x>0.415005861664713</x><!-- 354 -->
         <w>0.386869871043376</w><!-- 330 -->
         <y ifHelpPrompts="true">0.645833333333333</y><!-- 310 -->
         <h ifHelpPrompts="true">0.1875</h><!-- 90 -->
         <y ifHelpPrompts="false">0.69375</y><!-- 333 -->
         <h ifHelpPrompts="false">0.25</h><!-- 120 -->
         <fontSize ifSubset="font-size:default|large">0.041666666666667</fontSize><!-- 20 -->
         <lineSpacing ifSubset="font-size:default|large">1.49</lineSpacing>
         <fontSize ifSubset="font-size:small">0.033333333333333</fontSize><!-- 16 -->
         <lineSpacing ifSubset="font-size:small" ifHelpPrompts="true">1.375</lineSpacing>
         <lineSpacing ifSubset="font-size:small" ifHelpPrompts="false">1.475</lineSpacing>
      </text>
      <image ifHelpPrompts="true" ifSubset="gamelist-view-artwork:image-cropped|fanart" name="game-artwork" extra="true">
         <pos>0.68757327080891 0.296875</pos><!-- 586.5 142.5 -->
