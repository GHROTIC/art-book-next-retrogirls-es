<!--
Gamelist Style - Metadata Off - 16:9
(based on 1422x800 Resolution)
-->

<theme>
   <formatVersion>7</formatVersion>

   <subset name="gamelist-image-source" displayName="Gamelist Image Source">
      <include name="image" displayName="Image" />
      <include name="titleshot" displayName="Title Screen" />
      <include name="fanart" displayName="Fanart" />
      <include name="thumbnail" displayName="Thumbnail" />
      <include name="boxart" displayName="Boxart" />
   </subset>

   <view name="detailed,video">
      <image name="md_image,md_titleshot,md_fanart,md_thumbnail,md_marquee,md_boxart">
         <visible>false</visible>
         <origin>0.5 0.5</origin>
         <pos>0.682841068917018 0.5</pos><!-- 971 400 -->
         <maxSize>0.563994374120956 0.9</maxSize><!-- 802 720 -->
      </image>
   </view>

   <view name="detailed">
      <image ifSubset="gamelist-image-source:image" name="md_image">
         <visible>true</visible>
      </image>
      <image ifSubset="gamelist-image-source:titleshot" name="md_titleshot">
         <visible>true</visible>
      </image>
      <image ifSubset="gamelist-image-source:fanart" name="md_fanart">
         <visible>true</visible>
      </image>
      <image ifSubset="gamelist-image-source:thumbnail" name="md_thumbnail">
         <visible>true</visible>
      </image>
      <image ifSubset="gamelist-image-source:boxart" name="md_boxart">
         <visible>true</visible>
      </image>
   </view>

   <view name="video">
      <image name="md_marquee">
         <visible>false</visible>
      </image>
      <video name="md_video">
         <pos>0.682841068917018 0.5</pos><!-- 971 400 -->
         <maxSize>0.563994374120956 0.9</maxSize><!-- 802 720 -->
         <snapshotSource>image</snapshotSource>
         <snapshotSource>thumbnail</snapshotSource>
      </video>
   </view>

</theme>