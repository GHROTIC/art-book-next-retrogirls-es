<theme>
   <formatVersion>7</formatVersion>
   <view name="splash">
      <splash name="splash">
         <backgroundColor>010101</backgroundColor>
      </splash>
      <image name="background">
         <!-- Leave default for better OS/device portability -->
      </image>
      <image name="progressbar">
         <color>222222</color>
         <colorEnd>222222</colorEnd>
      </image>
      <image name="progressbar:active">
         <color>444444</color>
         <colorEnd>444444</colorEnd>
      </image>
      <text name="label">
         <alignment>center</alignment>
         <fontPath>./_inc/fonts/Oxygen-Bold.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <color>ffffff</color>
      </text>
   </view>
</theme>