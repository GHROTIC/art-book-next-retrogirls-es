<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   <view name="system,basic">
      <image name="background-art" extra="true">
         <path>./../../../../_inc/images/systems/default/default-fullscreen-background.jpg</path>
         <path>./../../../../_inc/images/systems/fullscreen/480x320/${system.theme}.jpg</path>
         <path ifSubset="background-art-source:alternative">./../../../../_inc/images/systems/fullscreen/480x320/alt/${system.theme}.jpg</path>
         <!-- Custom Image Support -->
         <path ifSubset="background-art-source:custom">${themeCustomizationsPath}${system.theme}.jpg</path>
         <path ifSubset="background-art-source:custom">${themeCustomizationsPath}${system.theme}.png</path>
         <size>0 1</size>
      </image>
   </view>
   <view name="basic">
      <image name="background-art" extra="true">
         <zIndex>0</zIndex>
         <color>ffffffcc</color>
      </image>
   </view>
</theme>