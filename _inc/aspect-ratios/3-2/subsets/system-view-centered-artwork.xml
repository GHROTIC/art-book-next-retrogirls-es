<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   <view name="system,basic">
      <image name="background-art" extra="true">
         <path>./../../../../_inc/images/systems/default/default-centered-background.png</path>
         <path>./../../../../_inc/images/systems/centered/${system.theme}.png</path>
         <path ifSubset="background-art-source:alternative">./../../../../_inc/images/systems/centered/alt/${system.theme}.png</path>
         <!-- Custom Image Support -->
         <path ifSubset="background-art-source:custom">${themeCustomizationsPath}${system.theme}.jpg</path>
         <path ifSubset="background-art-source:custom">${themeCustomizationsPath}${system.theme}.png</path>
         <size>0 1</size>
      </image>
   </view>
   <view ifSubset="background-art-source:custom" name="system">
      <image name="custom-background-art-mask" extra="true">
         <path>./../../../../_inc/images/utility/centered-background-custom-mask.svg</path>
         <size>0 1</size>
         <origin>0.5 0</origin>
         <pos>0.5 0</pos>
      </image>
   </view>
   <view name="basic">
      <image name="background-art" extra="true">
         <path>./../../../../_inc/images/systems/default/default-fullscreen-background.jpg</path>
         <zIndex>0</zIndex>
         <color>ffffffcc</color>
         <size>0 1</size>
      </image>
   </view>
</theme>