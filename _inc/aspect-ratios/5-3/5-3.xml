<theme>
   <formatVersion>7</formatVersion>

   <view name="system">
      <text name="logoText">
         <fontSize>0.15</fontSize>
      </text>
   </view>

   <view name="basic,detailed,video">
      <image name="logo">
         <pos>0.195121951219512 0.1375</pos><!-- 104 44 -->
         <maxSize>0.281425891181989 0.1</maxSize><!-- 155 32 -->
      </image>
      <text name="logoText">
         <pos>0.195121951219512 0.1375</pos><!-- 104 44 -->
         <size>0.281425891181989 0.1</size><!-- 155 32 -->
         <fontSize>0.075</fontSize>
      </text>
      <textlist name="gamelist">
         <pos>0.037523452157598 0.2625</pos><!-- 20 84 -->
         <size>0.307692307692308 0.7</size><!-- 164 224 -->
         <lineSpacing>1.56</lineSpacing>
         <fontSize>0.04375</fontSize><!-- 14 -->
      </textlist>
      <image name="gamelist-background" extra="true">
         <pos>0 0</pos>
         <size>0.390243902439024 1</size><!-- 208 320 -->
      </image>
      <image name="gamelist-border" extra="true">
         <pos>0.390243902439024 0</pos><!-- 208 -->
         <size>0.00375234521576 1</size><!-- 2 320 -->
      </image>
   </view>

   <view name="screen">
      <batteryIndicator name="batteryIndicator">
         <pos>0.015009380863039 0.025</pos><!-- 8 8 -->
         <size>0.969981238273921 0.046875</size><!-- 1862.36397748592832 54 - sized off of 1920x1152 to make the icon clear -->
         <full>./_inc/images/utility/icons/bigscreen/battery-100-vertical.svg</full>
         <at75>./_inc/images/utility/icons/bigscreen/battery-75-vertical.svg</at75>
         <at50>./_inc/images/utility/icons/bigscreen/battery-50-vertical.svg</at50>
         <at25>./_inc/images/utility/icons/bigscreen/battery-25-vertical.svg</at25>
         <empty>./_inc/images/utility/icons/bigscreen/battery-0-vertical.svg</empty>
         <incharge>./_inc/images/utility/icons/bigscreen/battery-charging-vertical.svg</incharge>
         <networkIcon>./_inc/images/utility/icons/bigscreen/wifi-vertical.svg</networkIcon>
         <itemSpacing>0</itemSpacing>
      </batteryIndicator>
   </view>

   <subset name="detail-view-image-source" displayName="Image Source">
      <include name="thumbnail" displayName="Thumbnail" />
      <include name="image" displayName="Image" />
      <include name="titleshot" displayName="Title Screen" />
      <include name="marquee" displayName="Marquee" />
      <include name="boxart" displayName="Boxart" />
      <include name="fanart" displayName="Fanart" />
   </subset>

   <subset name="video-view-marquee" displayName="Marquee Display">
      <include name="off" displayName="Off" />
      <include name="centered" displayName="Centered" />
      <include name="bottom" displayName="Bottom" />
   </subset>

   <subset name="gamelist-view" displayName="Gamelist View">
      <include name="media-only" displayName="Media Only">./subsets/gamelist-view-media-only.xml</include>
      <include name="metadata-min" displayName="Minimum Metadata">./subsets/gamelist-view-metadata-min.xml</include>
   </subset>

</theme>